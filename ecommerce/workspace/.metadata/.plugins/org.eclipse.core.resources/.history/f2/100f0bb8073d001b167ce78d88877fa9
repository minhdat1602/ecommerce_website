         <version>${sitemesh.version}</version>
      </dependency>



//file web.xml cần khai báo filter như sau:
<filter>
   <filter-name>sitemesh</filter-name>
   <filter-class>com.opensymphony.module.sitemesh.filter.PageFilter</filter-class>
</filter>
<filter-mapping>
   <filter-name>sitemesh</filter-name>
   <url-pattern>/*</url-pattern>
</filter-mapping>


//Cơ sở dữ liệu MySQL
      <dependency>
         <groupId>mysql</groupId>
         <artifactId>mysql-connector-java</artifactId>
         <version>${mysql.version}</version>
      </dependency>



<!-- //Servlet Weld (Tạo Singleton và tự động match các phương thức của các lớp implement, tạo đối tượng và lưu vào file beans.xml, mỗi lần request sẽ không cần tạo mới đối tượng đó) -->
      <dependency>
         <groupId>org.jboss.weld.servlet</groupId>
         <artifactId>weld-servlet</artifactId>
         <version>${weld.version}</version>
      </dependency>

